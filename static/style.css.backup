    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Exploit Mode Styles */
.exploit-mode-section {
    margin: 1.5rem 0;
    padding: 1rem;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 0.5rem;
    border: 1px solid rgba(59, 130, 246, 0.3);
}

.exploit-mode-toggle {
    display: flex;
    align-items: center;
    cursor: pointer;
    font-size: 1rem;
    user-select: none;
}

.exploit-mode-toggle input[type="checkbox"] {
    margin-right: 0.8rem;
    width: 20px;
    height: 20px;
    cursor: pointer;
}

.exploit-label {
    color: var(--accent-color);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.security-warning {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(239, 68, 68, 0.1) 100%);
    border: 2px solid var(--danger-color);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-top: 1rem;
    color: #fca5a5;
    font-size: 0.9rem;
    line-height: 1.6;
    text-align: left;
}

.security-warning strong {
    color: #ff3860;
}

.security-warning i {
    margin-right: 0.5rem;
}

/* Additional input types */
input[type="text"],
input[type="password"] {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    background-color: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    color: var(--text-primary);
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.3s;
}

input[type="text"]:focus,
input[type="password"]:focus {
    outline: none;
    border-color: var(--accent-color);
}